html,
body
  height 100%

html
  box-sizing border-box
  font-size 100%
*, *:before, *:after
  box-sizing inherit

body
  background hsla(0, 100%, 100%, 1)
  font 100% 'Montserrat_ultraLight', Helvetica, sans-serif

ol, ul
  list-style none
  margin 0
  padding 0

p
  hyphens auto
  -webkit-hyphens auto
  line-height 1.5em

a
  hyphens none
  -webkit-hyphens none
